{
  "compilerOptions": {
    "moduleResolution": "bundler",
    "lib": [ "esnext", "DOM" ],
    "strictNullChecks": true,
    "target": "esnext",
    "module": "esnext",
    "allowJs": false,
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": false,
    "rootDir": ".",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "outDir": "dist/ts"
  },
  "include": [ "src/**/*", "test/**/*" ]
}